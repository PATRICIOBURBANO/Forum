            <div>
                <textarea name="questionBody" asp-for="BodyQuestion" class="form-control">
                </textarea>

                <span asp-validation-for="BodyQuestion" class="text-danger"></span>
            </div>
            <div>
          

            </div>
            <div>
               
            </div>
            <div class="form-group">
                
                
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
      
    </div>
</div>
  </form>
