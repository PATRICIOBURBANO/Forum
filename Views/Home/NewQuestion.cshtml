@model Forum.Models.Question

@{
    ViewData["Title"] = "AddNewQuestion";
}

<h1>Add a New Question</h1>
<hr />
<h4>Title</h4>
 <form asp-action="NewQuestion" method="post">
 <select name="questionTag" asp-items="ViewBag.TagsQuestion"></select>
 
