@model IEnumerable<Forum.Models.Question>

@{
    ViewData["Title"] = "QuestionsByTag";
}

<h1>All Questions By Tag</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Question
            </th>
            <th>
                User Name
            </th>
            <th>
                Tag
            </th> 
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleQuestion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BodyQuestion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.Topic)
                </td>
              
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Home" asp-action="Index">Back home</a>
</p>
